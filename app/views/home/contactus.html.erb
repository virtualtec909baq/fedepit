<div class="breadcrumb-color breadcrumb-contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="<%= root_path%>"><%=t('.home')%></a>
                    </li>
                    <li class="active"><%=t('.contact')%></li>
                </ol>
            </div>
        </div>
      </div>
</div>
<div class="container">
    <div class="row last-inf-dt">
        <div class="col-lg-12">
            <%= form_tag(home_send_mail_path) do %>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="input1"><%= t('.name')%> *</label>
                        <%= text_field_tag 'name', nil, class: 'form-control', placeholder: t('.place_name') %>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="input2"><%= t('.email')%> *</label>
                        <%= email_field_tag 'email', nil, class: 'form-control', placeholder: t('.place_email') %>
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="input4"><%= t('.message')%> </label>
                        <%= text_area_tag 'comments', nil, class: 'form-control', rows: 4, placeholder: t('.place_message') %>
                    </div>
                    <div class="form-group col-lg-12">
                        <%= submit_tag t('.send'), class: 'btn btn-default btn-about ' %>
                 </div>
            <%end%>
        </div>
    </div>
</div>