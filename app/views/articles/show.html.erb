<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @article.title%></h1>
      <hr>
      <p><i class="fa fa-calendar"></i></span> <%= @article.created_at.strftime('%b  %d  %Y')%></p>
      <hr>
      <!-- Preview Image -->
      <%if @article.img.blank?%>
         <img class="img-responsive" src="http://placehold.it/900x300" alt="">
        <%else%>
        <img alt="" class="img-responsive" src="<%= @article.img%>">
      <%end%>
      <hr>
      <p class="lead"><%= @article.description%></p>
      <%- @article.paragraphs.each do |paragraph|%>
        <div class="row">
            <%- if !paragraph.img.blank? %>
              <div class="col-md-8">
                <p><%= paragraph.description%></p>
              </div>
              <div class="col-md-4">
                <img class="center-img" src="<%= paragraph.img %>" style="height: 250px; width: 190px;">
              </div>
            <%else%>
              <div class="col-md-12">
                <br>
                <p><%= paragraph.description%></p>
              </div>
            <%end%>
          </div>
      <%end%>
      <hr>
      <%= render partial: "articles/form"%>
      <%= render partial: "articles/comments"%>
      <hr>
      
    </div>
    <div class="col-md-4">
      <div class="well">
        <h4>Ultimos Articulos</h4>
        <div class="row">
          <div class="col-lg-6">
            <ul class="list-unstyled">
            <% @articles.each do |article| %>
              <li><a href="<%= article_path(article.id)%>"><%= article.title%></a>
            <%end%> 
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
