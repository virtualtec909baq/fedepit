<!-- Modal -->
<div class="modal fade" id="myModalComment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Enviar comentario</h4>
      </div>
      <div class="modal-body">
        <%= form_for :comment , url: admin_comments_path(@comment), method: :post do |f| %>
        <div class="field">
          <%= f.label :Nombre_usuario %><br>
          <%= f.text_field :name_user, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :Correo_usuario %><br>
          <%= f.text_field :email_user, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :Mensaje %><br>
          <%= f.text_area :message, class: 'form-control' %>
          <%= f.hidden_field :article_id, :value => "#{params[:id]}" %>
        </div>
        <div class="actions">
          <%= f.submit :class =>"btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
