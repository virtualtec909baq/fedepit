<div class="blog-top-img">
  <div class="effect-over"></div>
  <div class="container">
    <div class="col-lg-12">
      <h1 class="about4-top-title">Texto descriptivo<span class="color-txt"> Texto descriptivo</span></h1>
      <h1 class="about4-top-title about4-top-second"><span class="color-txt">Texto descriptivo</span> </h1>
    </div>
  </div> 
</div>
<div class="breadcrumb-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ol class="breadcrumb">
          <li>
            <a href="<%root_path%>"><%=t ('.home')%></a>
          </li>
          <li class="active"><%=t ('.article')%></li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% @articles.each do |article| %>
  <div class="row blog-row-prod">
    <div class="col-md-1 blog-ico">
      <p><span class="icon-mic"></span></p>
      <p class="blog-date"><%= article.created_at.strftime('%b - %d - %Y')%></p>
    </div>
    <div class="col-md-5">
      <a href="shop/store.html">
        <%if article.img.blank?%>
        <img alt="" class="img-responsive" src="http://placehold.it/630x300">
        <%else%>
        <img alt="" class="img-responsive" src="<%= article.img%>">
        <%end%>
      </a>
    </div>
    <div class="col-md-6 blog-info-prod">
      <h3><a href="shop/store.html"><%= article.title.upcase%></a></h3>
      <p class="blog-desc-prod"><%= article.description%></p>
      <%= link_to t('.seguir'), article_path(article), :class => "btn btn-primary"  %>
    </div>
  </div>
  <hr>
  <% end %>
  <%= will_paginate @articles, :locals => { :articles => @articles }, renderer: BootstrapPagination::Rails%>
</div>
