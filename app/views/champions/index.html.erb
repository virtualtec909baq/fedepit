<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1><%=t ('.campeones')%></h1>
      </div>
      <div class="box-purchase">
        <%= render partial: "/champions/filters"%>
      </div>
    
    <hr>
    <br>
    <br>
    <br>
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th class="center"><%=t ('.nombre')%></th>
          <th class="center"><%=t ('.raza')%></th>
          <th class="center"><%=t ('.sexo')%></th>
          <th class="center"><%=t ('.variedad')%></th>
          <th class="center"><%=t ('.categoria')%></th>
          <th class="center"><%=t ('.puesto')%></th>
          <th class="center"><%=t ('.ganador')%></th>
          <th class="center"><%=t ('.puntos')%></th>
          <th class="center">Show</th>
          <th class="center"><%=t ('.fecha')%></th>
        </tr>
      </thead>
      <tbody>
         <% @champions.each do |champion| %>
        <tr >
          <td class="center"><%= link_to champion.canine.name, canine_path(champion.canine.id) %></td>
          <td class="center"><%= get_race(champion.canine.race_id) %></td>
          <td class="center"><%= gender(champion.canine.gender)  %></td>
          <td class="center"><%= get_variety(champion.category_race_variety.variety_id)   %></td>
          <td class="center"><%= get_category(champion.category_race_variety.category_id) %></td>
          <td class="center"><%= champion.position %></td>
          <td class="center"><%= champion.winner %></td>
          <td class="center"><%= champion.points %></td>
          <td class="center"><%= get_show(champion.spectacle_id) %></td>
          <td class="center"><%= champion.date %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @champions, :locals => { :champions => @champions }, renderer: BootstrapPagination::Rails%>
    </div>
  </div>
</div>


