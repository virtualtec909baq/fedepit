<div class="blog-top-img">
  <div class="effect-over"></div>
  <div class="container">
    <div class="col-lg-12">
      <h1 class="about4-top-title">Blog with <span class="color-txt">Right Sidebar</span> </h1>

    </div>
  </div> 
</div> 
<div class="breadcrumb-color breadcrumb-contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="<%= root_path%>"><%= t('.home')%></a>
                    </li>
                    <li class="active"><%= t('.breeder')%></li>
                </ol>
            </div>
        </div>
      </div>
</div>
<div class="container">
        <div class="row">
          <div class="activegrid" id="cbp-vm">
              <ul class="nav-pills rectangle-list albumContainer isotope" id="product">
                <% @breeders.each do |breeder|%>
                  <li class="cat1 col-md-4   isotope-item">
                      <%if breeder.img.blank?%>
                        <img src="http://placehold.it/700x450" class="img-responsive" alt=""/>
                        <%else%>
                       <img alt="" class="img-responsive" src="<%= breeder.img%>">
                      <%end%>
                      <a href="" class="title"> <%= breeder.name%>  </a>
                      <p class="description"> <%= breeder.country%> <br> </p>
                      <p class="description"> <%= breeder.city%> </p>
                      <p class="description"> <%= breeder.email%> </p>
                      <%= link_to t('.detail'), breeder_path(breeder), :class => "btn btn-primary"  %>
                      <div class="clear"></div>
                  </li>
                <%end%>
            </ul> 
          </div>
        </div>
        <!-- /.row -->
    </div>