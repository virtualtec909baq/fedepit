<div class="breadcrumb-color breadcrumb-contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ol class="breadcrumb">
          <li>
            <a href="<%= root_path%>"><%= t('.home')%></a>
          </li>
          <li class="active"><%= t('.breeder')%></li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row about-generic">
    <% @breeders.each do |breeder| %>

    <div class="col-sm-4">
      <div class="about-desc-people">
        <%if breeder.img.blank?%>
        <img alt="" class="img-responsive" src="http://placehold.it/120x120">
        <%else%>
        <img alt="" class="img-responsive" src="<%= breeder.img%>"style="height: 350px; width: 580px;">
        <%end%>
      </div>
      <h3><%= breeder.name%></h3>
      <p class="job-desc">What does this team member do? Keep it short! This is also a great spot for social links!</p>
      <ul class="list-unstyled list-inline list-social-icons">
        <li class="tooltip-social facebook-link">
          <a title="" data-placement="top" data-toggle="tooltip" href="#" data-original-title="Facebook">
            <i class="fa fa-facebook"></i>
          </a>
        </li>
        <li class="tooltip-social twitter-link">
          <a title="" data-placement="top" data-toggle="tooltip" href="#" data-original-title="Twitter">
            <i class="fa fa-twitter"></i>
          </a>
        </li>
      </ul>
    </div>
    <%end%>
  </div>
</div>