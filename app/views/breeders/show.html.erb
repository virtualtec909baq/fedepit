<div class="container shop-dresses" id="product_dresses">
  <div class="row">
    <div class="prod-top-img col-md-12" id="single-prod-top">

      <div class="col-md-4 pp-cont-det">
        <a href="#">
          <%if @breeder.img.blank?%>
          <img src="http://placehold.it/1000x500" class="img-responsive" alt=""/>
          <%else%>
          <img alt="" class="img-responsive" src="<%= @breeder.img%>">
          <%end%>
        </a>
      </div>
      <div class="col-md-8 det-info-prod">
        <div class="single-prod-info">
          <div class="det-dres">
            <span class="product-name-title"><%= @breeder.name%></span>
          </div>
          <span class="shop-price"> </span>
        </div>
        <div class="container">
        </div>
        <div class="details-material_dresses">
          <ul>

            <div class=" col-md-13 col-lg-13 "> 
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td>Pais:</td>
                    <td><%= @breeder.country%></td>
                  </tr>
                  <tr>
                    <td>Ciudad:</td>
                    <td><%= @breeder.city%></td>
                  </tr>
                  <tr>
                    <tr>
                      <td>Home Address</td>
                      <td><%= @breeder.adrress%></td>
                    </tr>
                    <tr>
                      <td>Email</td>
                      <td><a href="mailto:info@support.com"><%= @breeder.email%></a></td>
                    </tr>
                     <tr>
                      <td>Telefono:</td>
                      <td><%= @breeder.phone%></td>
                    </tr>
                    <tr>
                      <td>Nombre criadero:</td>
                      <td><%= @breeder.name_breed%></td>
                    </tr>
                    <tr>
                      <td>Facebook:</td>
                      <td><%= link_to @breeder.facebook, "#{@breeder.facebook}", target: "_blank" %></td>
                    </tr>
                    <tr>
                      <td>Twitter:</td>
                      <td><%= link_to @breeder.twitter, "#{@breeder.twitter}", target: "_blank" %></td>
                    </tr>
                    <tr>
                      <td>Instagram:</td>
                      <td><%= link_to @breeder.instagram, "#{@breeder.instagram}", target: "_blank" %></td>
                    </tr>
                    <tr>
                      <td>Web:</td>
                      <td><%= link_to @breeder.web, "#{@breeder.web}", target: "_blank" %></td>
                    </tr>
                  </tr>
                </tbody>
              </table>
            </div>
          </ul>
        </div>
        <div class="single-prod-button">
        </div>
      </div>

    </div>
  </div>
</div>

