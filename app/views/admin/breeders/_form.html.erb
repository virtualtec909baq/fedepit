<div class="modal-body">
  <%= form_for :breeder , url: admin_breeders_path(@breeder), :remote => true , method: :post do |f| %>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.collection_select :type_breeder_id, TypeBreeder.all, :id, :name, {prompt: " "}, {class: "form-control"}%>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :name_breed %><br>
    <%= f.text_field :name_breed, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br>
    <%= f.text_field :twitter, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :instagram %><br>
    <%= f.text_field :instagram, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :web %><br>
    <%= f.text_field :web, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class =>"btn btn-primary btn-block" %>
  </div>
  <% end %>
</div>
