<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Criadores</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/breeders/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th class="center"><%= sort_link @search, :type_breeder_id, "Tipo Criador"%></th>
      <th class="center">Criadero</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @breeders.each do |breeder| %>
    <tr>
      <td class="center"><%= link_to breeder.name, admin_breeder_path(breeder), :class => "link_to"  %></td>
      <td class="center"><%= breeder.type_breeder.name %></td>
      <td ><%= breeder.name_breed %></td>
      <td class="center"><%= link_to edit_admin_breeder_path(breeder) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_breeder_path(breeder), method: :delete, data: { confirm: 'Desea eliminar este criador?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @breeders, :locals => { :breeders => @breeders }, renderer: BootstrapPagination::Rails%>

