<div class="container">
    <div class="row last-inf-dt">
        <div class="col-lg-12">
            <%= form_tag(admin_breeders_send_mail_attachments_path) do %>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <h2>ENVIAR METTER</h2>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="input1">Nombre*</label>
                        <%= text_field_tag 'name', nil, class: 'form-control', placeholder: "Nombre" %>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="input2">Email *</label>
                        <%= email_field_tag 'email', nil, class: 'form-control', placeholder: "Email"%>
                    </div>
                    <div class="form-group col-lg-12">
                        <%= submit_tag "Enviar", class: 'btn btn-default btn-about ' %>
                 </div>
            <%end%>
        </div>
    </div>
</div>