<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Videos</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/animations/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :title, "Nombre"%></th>
      <th class="center">YouTube</th>
      <th class="center">Descripci√≥n</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @animations.each do |animation| %>
    <tr>
      <td class="center"><%= link_to animation.title, admin_animation_path(animation), :class => "link_to"  %></td>
      <td ><a href="https://www.youtube.com/watch?v=<%=animation.url %>" target="_blank">Ver video en YOUTUBE</a></td>
      <td ><%= truncate(animation.description, :ommision => "", :length => 40) %></td>
      <td class="center"><%= link_to edit_admin_animation_path(animation) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_animation_path(animation), method: :delete, data: { confirm: 'Desea eliminar este video?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @animations, :locals => { :animations => @animations }, renderer: BootstrapPagination::Rails%>



