<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Categoria</h1>
    </div>
    <div class="box-purchase">
       <%= render :partial => "admin/categories/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :title, "Nombre"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td class="center"><%= link_to edit_admin_category_path(category) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_category_path(category), method: :delete, data: { confirm: 'Desea eliminar este categoria?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @categories, :locals => { :categories => @categories }, renderer: BootstrapPagination::Rails%>

