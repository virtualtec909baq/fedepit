<div class="container m20px">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Mis Articulos</h1>
      </div>
      <div class="box-purchase">
        <%= render :partial => "admin/articles/filters"%>
      </div>
    </div>
  </div>
  <hr>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th><%= sort_link @search, :title, "Title"%></th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, admin_article_path(article), :class => "link_to"  %></td>
        <td><%= article.description %></td>
        <td><%= link_to edit_admin_article_path(article), :class => "link_to"  do%>
          <i class="fa fa-edit"></i>
          <% end %>
        </td>
        <td><%= link_to admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } do %>
         <i class="fa fa-trash-o"></i>
        <%end%>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @articles, :locals => { :articles => @articles }, renderer: BootstrapPagination::Rails%>
</div>


