<div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p class="p-center">Paso 1</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p class="p-center">Paso 2</p>
        </div>
    </div>
</div>

<div class="row setup-content" id="step-1">
    <div class="errors"></div>
    <%= form_for @article ,  remote: true, url: admin_articles_path(@article) , method: :post do |f| %>
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3 class="center"> TITULO Y UNA BREVE DESCRIPCION</h3>
                <div class="fileUpload btn btn-primary pull-right">
                    <span>Imagen de Portada</span>
                    <%= f.file_field :img , :class => "upload"%>
                </div>
                <br>
                <div class="form-group">
                    <label class="control-label">Titulo Articulo</label>
                    <%= f.text_field :title, class: 'form-control' , :maxlength =>"100" ,:required => false, :placeholder => "Ingrese el nombre del articulo"%>
                </div>
                <div class="form-group">
                    <label class="control-label">Decripcion</label>
                    <%= f.text_area :description, class: 'form-control', :placeholder =>"Breve descripcion del articulo" %>
                </div>
                <%= f.submit :class =>"btn btn-primary nextBtn btn-lg pull-right" %>
            </div>
        </div>
    <%end%>
</div>


    