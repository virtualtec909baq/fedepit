<div class="row">
  <div class='col-md-9'>
    <%= link_to "Editar Articulo", edit_admin_article_path(@article), :class => "btn btn-primary"%>
    <div class="blog-info-prod">
      <div class="pull-right">
        <h5><i class="fa fa-clock-o"></i> <%= @article.created_at.strftime('%b  %d  %Y')%></h5>
      </div>
      <div class="page-header">
        <h1><%= @article.title%></h1>
      </div>
      <a href="#">
        <%if @article.img.blank?%>
          <img src="http://placehold.it/1000x500" class="img-responsive" alt=""/>
        <%else%>
          <img alt="" class="img-responsive" src="<%= @article.img%>">
        <%end%>
      </a>
      <br>
      <p class="blog-author"><%= @article.comments.count %> Comentarios</a></p>

      <p class="blog-desc-prod"><%= @article.description%></p>
      <div class="comments">
        <div data-example-id="simple-table" class="bs-example">
          <table class="table table-striped table-hover table-bordered">
            <thead>
              <tr>
                <th class="center">Nombre</th>
                <th class="center">Comentario</th>
                <th class="center">Correo</th>
                <th class="center">N. Reporte</th>
                <th colspan="1"></th>
              </tr>
            </thead>
            <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td class="center"><%= comment.name_user%></td>
                <td class="center"><%= comment.message%></td>
                <td class="center"><%= comment.email_user%></td>
                <td class="center"><%= comment.report%></td>
                <td class="center"><%= link_to admin_change_status_comments_path(comment), method: :put, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-check"></i>
                <%end%></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class='col-md-3'>
    <div class="blog-info-prod">
      <h2 class="t-title-office"><span><%= t('.reciente')%></span></h2>
      <ul class='post-lateral'>
       <% @articles.each do |article| %>
        <li>
          <div>
            <p><%= article.title %></p><p class='post-data'> <%= @article.created_at.strftime('%b  %d  %Y') %></p>
            <%= link_to t('.seguir leyendo'), admin_article_path(article)%>
          </div>
        </li>
       <% end %>
      </ul>
    </div>    
  </div> 
</div>
