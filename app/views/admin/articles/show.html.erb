<div class="breadcrumb-color">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<ol class="breadcrumb">
					<li>
						<li class="active">Blog</li>
					</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
<div class="container">
    <div class="row blog-row-prod">
      <div class="col-md-12">
      	<div class="blog-info-prod">
      		<div class="page-header">
        		<h1><%= @article.title%></h1>
      		</div>
            <a href="shop/store.html">
            	<%if @article.img.blank?%>
            	<img alt="" class="img-responsive" src="http://placehold.it/1500x500">
            	<%else%>
            	<img alt="" class="img-responsive" src="<%= @article.img%>">
            	<%end%>
            </a>
            <p class="blog-desc-prod">
            	<%= @article.description%>
        	</p>
        </div>
    </div>
</div>
