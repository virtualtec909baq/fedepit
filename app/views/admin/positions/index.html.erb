<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Puestos</h1>
    </div>
    <div class="box-purchase">
      <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModalColor">  Agregar Puesto
      </button>
      <%= render :partial => "admin/positions/form"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :place, "No. Puesto"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @positions.each do |position| %>
    <tr >
      <td class="center"><%= position.place %></td>
      <td class="center"><%= link_to edit_admin_position_path(position) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_position_path(position), method: :delete, data: { confirm: 'Desea eliminar este puesto?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @positions, :locals => { :positions => @positions }, renderer: BootstrapPagination::Rails%>

