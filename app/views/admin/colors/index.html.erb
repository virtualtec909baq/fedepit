<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Colores</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/colors/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @colors.each do |color| %>
    <tr >
      <td class="center"><%= color.name %></td>
      <td class="center"><%= link_to edit_admin_color_path(color) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_color_path(color), method: :delete, data: { confirm: 'Desea eliminar este color?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @colors, :locals => { :colors => @colors }, renderer: BootstrapPagination::Rails%>
