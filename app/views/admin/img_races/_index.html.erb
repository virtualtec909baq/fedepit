<table class="table table-striped table-hover table-bordered">
	<thead>
		<tr>
			<td class="center">Image</td>
			<td class="center">Descripci√≥n</td>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody>
		<% @race.img_races.each do |race|%>
			<tr>
				<td><%= image_tag race.img.url, :class => "thumbnail", :size => '100x100'%>
				</td>
				<td><%= race.description%></td>
				<td class="center">
					<%= link_to edit_admin_race_img_race_path(:race_id => @race.id, :id =>race.id) do %>
						<i class="fa fa-edit"></i>
					<%end%>
				</td>
				<td class="center"><%= link_to admin_race_img_race_path(:race_id => @race.id, :id =>race.id), method: :delete, data: { confirm: 'Desea eliminar este detalle?' } do %>
					<i class="fa fa-trash-o"></i>
					<%end%>
				</td>
			</tr>
		<%end%>
	</tbody>
</table>