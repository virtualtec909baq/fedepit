<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Variedades</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/varieties/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :title, "Nombre"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @varieties.each do |variety| %>
    <tr>
      <td><%= variety.name %></td>
      <td class="center"><%= link_to edit_admin_variety_path(variety) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_variety_path(variety), method: :delete, data: { confirm: 'Desea eliminar este variedad?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @varieties, :locals => { :varieties => @varieties }, renderer: BootstrapPagination::Rails%>



