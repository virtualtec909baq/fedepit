<div class="row">
	<div class="col-lg-12">
		<div class="page-header">
			<h1><%= @event.name.upcase%></h1>
		</div>
	</div>
</div>

<div class="modal-body">
	<%= form_for @event , url: admin_event_path(@event), :id => @event.id , method: :put do |f| %>
	<% if @event.errors.any? %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong>No se puede modificar este evento:</strong>
          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
	<div class="field">
		<%= f.label :type %><br>
		<%= f.collection_select :type_event_id, TypeEvent.all, :id, :name, {prompt: " "}, {class: "form-control"}%>
	</div>
	<div class="field">
		<%= f.label :Nombre %><br>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="field">
		<%= f.label :Lugar %><br>
		<%= f.text_field :place , class: 'form-control' %>
	</div>
	<div class="field">
		<%= f.label :DescripciÃ³n %><br>
		<%= f.text_field :description , class: 'form-control'%>
	</div>
	<div class="field">
		<%= f.label :Fecha %><br>
		<%= f.date_select :date, class: 'form-control'  %>
	</div>
	<div class="field">
		<%= f.label :Imagen %><br>
		<%- if f.object && f.object.img && f.object.img%>
      		<%= image_tag(f.object.img.to_s, :transformation => 'hint', alt: f.object.img.to_s)%>
     		<%= f.file_field :img %>
      	<%else%>
     	 	<%= f.file_field :img %>
      	<%end %>
	</div>
	<div class="actions">
		<%= f.submit :class =>"btn btn-primary btn-block" %>
	</div>
	<% end %>
</div>