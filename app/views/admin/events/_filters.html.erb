<div class="col-md-12">
	<div class="row">
	<%= search_form_for @search, url: admin_events_path do |f|%>		
		<div class="col-md-6">
			<label>Nombre</label>
			<%= f.search_field(:name_cont, class: 'form-control')%>
		</div>
		<div class="col-md-6">
			<label>Lugar</label>
			<%= f.search_field(:place_cont, class: 'form-control')%>
		</div>
		<div class="col-md-4">
			<br>
			<%= f.submit :class =>"btn btn btn-primary btn-block"%>
		</div>
		<div class="col-md-4">
			<br>
			<%= link_to "Borrar Filtro", request.path, class:"btn btn-danger btn_white btn-block"%>
		</div>
		<div class="col-md-4">
			<br>
			<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModalEvent">	Agregar Evento
			</button>
		</div>
	<%end%>
	
	</div>
</div>	
<%= render :partial => "form"%>
