<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Eventos</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/events/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :type_event, "Tipo Evento"%></th>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th class="center">Descripci√≥n</th>
      <th class="center"><%= sort_link @search, :date, "Fecha"%></th>
      <th class="center"><%= sort_link @search, :place, "Lugar"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr >
      <td class="center"><%= event.type_event.name %></td>
      <td class="center"><%= link_to event.name, admin_event_path(event), :class => "link_to"  %></td>
      <td class="center"><%= event.description %></td>
      <td class="center"><%= event.date %></td>
      <td class="center"><%= event.place %></td>
      <td class="center"><%= link_to edit_admin_event_path(event) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_event_path(event), method: :delete, data: { confirm: 'Desea eliminar este evento?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @events, :locals => { :events => @events }, renderer: BootstrapPagination::Rails%>


