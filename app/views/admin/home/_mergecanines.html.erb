<table class="table table-striped responstable">
  <tr>
    <th data-th="Driver details"><span>Nombre</span></th>
    <th>COI</th>
    <th>COR</th>
    <th>N.C</th>
  </tr>
  <% @canines.each do |canine| %>
    <% get_ancestors(canine).each do |can|%>
        <% @canine = Canine.find(can)%>
        <% nivel(canine, can)%>
        <tr>
        <th><%= @canine.name.upcase%></th>
          <th><%= can%> </th>
          <th><%= $level%></th>
          <th><%= nivel_consa($level)%>%</th>
        </tr>
    <%end%>
  <% end %>
</table> 
