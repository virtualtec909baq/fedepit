<script type="text/javascript">
    $(document).ready(function() {
    $("#caninestable .deleteLink").on("click",function() {
        var tr = $(this).closest('tr');
        tr.css("background-color","#C9302C");
        tr.fadeOut(400, function(){
            tr.remove();
        });
      return false;
    });
});
</script>
<hr>
 <table class="table table-striped table-hover table-bordered" id="caninestable">
    <thead>
      <tr>
        <th class="center"> </th>
        <th class="center">Nombre</th>
        <th class="center">Genero</th>
        <th class="center">No. Hijos</th>
        <th class="center"> </th>
        <th class="center"> </th>
    </thead>
    <tbody>
      <% @canines.each do |canine| %>
        <tr >
          <td class="center"><a class="deleteLink" href="" >X</a></td>
          <td class="center"><%= link_to canine.name, admin_canine_path(canine), :class => "link_to"  %></td>
          <td class="center"><%= gender(canine.gender) %></td>
          <th class="center"><%=count_children(canine)%></th>
          <%if !enviar_cruce(canine).nil?%>
              <td class="center"> 
                <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal<%=canine.id%>">Ver Mas</button>
                <%= render(partial: '/admin/home/feature',locals: { canine: canine })%>
              </td>
          <%else%>
          <td class="center"></td>
          <%end%>
          <td class="center"> <%= link_to "cruzar", admin_mergecanines_path(canine)%></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
  
