<div class="container">
    <div class="row last-inf-dt">
        <div class="col-lg-12">
            <h2>Enviar Metter</h2>
        </div>
        <div class="col-lg-12">
            <%= form_tag(admin_home_send_mail_attachments_path) do %>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="input1">Nombre*</label>
                        <%= text_field_tag 'name', nil, class: 'form-control', placeholder: "Nombre del criador" %>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="input2">Correo *</label>
                        <%= email_field_tag 'email', nil, class: 'form-control', placeholder: "Correo Electronico" %>
                    </div>
                    <div class="form-group col-lg-12">
                        <%= submit_tag "Enviar", class:"btn btn-primary btn_white btn-block" %>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>