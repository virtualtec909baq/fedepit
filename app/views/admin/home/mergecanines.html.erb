<div class="row">
  <h1 class="page-header">Cruces Caninos</h1>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-6">
        <select class="form-control">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
        </select>
      </div>
      <div class="col-md-6">
        <button class="btn btn-primary btn-block" type="submit">Refrescar</button>
      </div>
    </div>
    <br>
    <table class="table table-striped responstable">
      <tr>
        <th data-th="Driver details"><span>Nombre</span></th>
        <th>N.C</th>
        <th>N.C</th>
        <th>Numero Gem</th>
      </tr>
      <% get_ancestors(@canine).each do |canine|%>
        <% @canine = Canine.find(canine)%>
        <% nivel(Canine.find(params[:id]), canine)%>
        <tr>
          <%hash = [@canine.id, $level]%>
          <%hash_canine_level = Hash[*hash]%>
          <th><%= @canine.name.upcase%></th>
          <th><%= hash_canine_level%></th>
          <th><%= nivel_consa($level)%>%</th>
          <th><%= $level%></th>
        </tr>
      <%end%>
    </table> 
  </div>
  
  <div class="col-md-6">
    <div class="row">
      <%= search_form_for @search, url: admin_mergecanines_path , :remote=>"true", :method => :get do |f|%>
        <div class="col-md-6">
          <%= f.collection_select :id_eq, Canine.all, :id, :name, include_blank: true %>
        </div>
        <div class="col-md-6">
          <%= f.submit "Refrescar" , :class =>"btn btn-primary btn-block"%>
        </div>
      <%end%>
    </div>
    <br>
    <div id="table_canine"><%= render partial: '/admin/home/mergecanines' %></div>
  </div>
</div>