<%= javascript_include_tag "welcome"%>
<div class="row">
  <div id="skull"class="col-lg-12">
    <h1 class="page-header">Filtros de Busqueda Cruce</h1>
</div>
<div class="modal-body">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Filtros</button>
    <div class="top-buffer"></div>
    <div class="collapse" id="collapseExample">
      <div class="well">
        <%= search_form_for @search, url: admin_realizarcruce_path(:merge => true), :remote=>"true", :method => :get do |f|%>
        <div class="row">
            <div class="col-md-6">
                <%= f.submit :class =>"btn btn btn-primary btn-block"%>
            </div>
            <div class="col-md-6">
                <%= link_to "Borrar Filtros", request.path, class:"btn btn-danger btn_white btn-block"%>
            </div>
        </div>
        <%end%>
    </div>
</div>
</div>
</div>
<div id="merge"><%= render partial: '/admin/home/index' %></div>