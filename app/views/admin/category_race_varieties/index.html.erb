<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Gestion de Campeonatos</h1>
    </div>
    <div class="box-purchase">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalVideos">
        Agregar Gestion de Campeonatos
      </button>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :race, "Raza"%></th>
      <th class="center"><%= sort_link @search, :variety, "Variedad"%></th>
      <th class="center"><%= sort_link @search, :category, "Categoria"%></th>
      <th class="center"><%= sort_link @search, :tournament, "Campeonatos"%></th>
      <th colspan="3"></th>
    </tr>
    </tr>
  </thead>
  <tbody>
    <% @category_race_varieties.each do |category_race_variety| %>
    <tr>
        <td><%= get_race(category_race_variety.race_id) %></td>
        <td><%= get_variety(category_race_variety.variety_id) %></td>
        <td><%= get_category(category_race_variety.category_id )%></td>
        <td><%= get_tournament(category_race_variety.tournament_id) %></td>
        <td>
          <% if category_race_variety.punctuation%>
            <i class="fa fa-star"></i> <span>Si Puntua</span>
          <%else%>
            <i class="fa fa-star-o"></i><span>No Puntua</span>
          <%end%>
        </td>
        <td class="center">
          <%= link_to edit_admin_category_race_variety_path(category_race_variety) do %>
            <i class="fa fa-edit"></i>
          <%end%>
        </td>
        <td>
          <%= link_to admin_category_race_variety_path(category_race_variety), method: :delete, data: { confirm: 'Desea eliminar este categoria?' } do %>
            <i class="fa fa-trash-o"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @category_race_varieties, :locals => { :category_race_varieties => @category_race_varieties }, renderer: BootstrapPagination::Rails%>
<%= render :partial => "admin/category_race_varieties/form"%>