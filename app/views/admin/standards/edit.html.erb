<div class="row">
 <%= form_for @standard , url: admin_standard_path(@standard), :id => @standard.id , method: :put do |f| %>
  <div class="col-md-12"><h2>Editar Estandar de raza</h2></div>
  <% if @standard.errors.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>No se puede modificar el estandards:</strong>
        <ul>
          <% @standard.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="col-md-12">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="col-md-12">
        <%= f.label :race_id %><br>
        <%= f.collection_select :race_id, Race.all.order(name: :asc), :id, :name, {prompt: "Escoger Raza"}, {class: "form-control"}%>
      </div>
       <div class="col-md-12">
        <%= f.label :characteristic_id %><br>
        <%= f.collection_select :characteristic_id, Characteristic.where.not(measure_id: nil).order(name: :asc), :id, :name, {prompt: "Escoger Caracteristica"}, {class: "form-control"}%>
      </div>
      <div class="col-md-12">
        <%= f.label :rg_lt %><br>
        <%= f.number_field :rg_lt, class: 'form-control'%>
      </div>
      <div class="col-md-12">
        <%= f.label :rg_gteq %><br>
        <%= f.number_field :rg_gteq, class: 'form-control'%>
      </div>
      <div class="col-md-12">
        <%= f.label :age_lt %><br>
        <%= f.number_field :age_lt, class: 'form-control'%>
      </div>
      <div class="col-md-12">
        <%= f.label :age_gteq %><br>
        <%= f.number_field :age_gteq, class: 'form-control'%>
      </div>
      <div class="col-md-12">
        <br>
          <%= f.submit :class =>"btn btn-primary btn-block" %>
      </div>
  <% end %>
</div>
