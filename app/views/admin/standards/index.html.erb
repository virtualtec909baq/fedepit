<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Estandares de Raza</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/standards/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :description, "Nombre"%></th>
      <th class="center"><%= sort_link @search, :race_id, "Razas"%></th>
      <th class="center">Caracteristicas</th>
      <th>Rango</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @standards.each do |standard| %>
    <tr >
      <td class="center"><%= standard.description %></td>
      <td class="center"><%= link_to get_race(standard.race_id), admin_race_path(standard.race_id) %></td>
      <td class="center"><%= get_characteristics(standard.characteristic_id) %></td>
      <td class="center"><%= standard.rg_lt%> a <%= standard.rg_gteq%> <%=standard.characteristic.measure.unit%>
      </td>
      <td class="center"><%= link_to edit_admin_standard_path(standard) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_standard_path(standard), method: :delete, data: { confirm: 'Desea eliminar este Estandar de raza?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @standards, :locals => { :standards => @standards }, renderer: BootstrapPagination::Rails%>
