<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Metter</h1>
    <br>
  </div>
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center">ID</th>
      <th class="center">Nombre Canino</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td class="center"><%= feature.id%></td>
        <td class="center"><%= feature.canine_name%></td>
        <td class="center">
          <%= link_to "Detalle Metter", admin_feature_path(feature)%>
        </td>
        <td class="center">
          <%- if feature.canine%>
            <%= link_to "Detalle Canino", admin_canine_path(feature.canine)%>
          <%else%>
            <span> Metter sin cacninos asociados</span>
          <%end%>
        </td>
        <td class="center"><%= link_to edit_admin_feature_path(feature) do %>
          <i class="fa fa-edit"></i>
        <%end%>
        </td>
        <td class="center">
          <%= link_to admin_feature_path(feature), method: :delete, data: { confirm: 'Desea eliminar este metter?' } do %>
            <i class="fa fa-trash-o"></i>
          <%end%>
        </td>
        <%if !params[:metter] %>
          <td class="center">
            <%= link_to "Adicionar Metter", edit_admin_feature_path(feature, :edit => "true")%>
          </td>
        <%end%>
      </tr>
    <% end %> 
  </tbody>
</table>
    
