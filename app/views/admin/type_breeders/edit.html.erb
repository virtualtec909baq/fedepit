<div class="row">
	<%= form_for @type_breeder , url: admin_type_breeder_path(@type_breeder), :id => @type_breeder.id , method: :put do |f| %>
	<div class="col-md-12">
	<h2>Editar Tipo Criador</h2>
		<% if @type_breeder.errors.any? %>
		<div class="alert alert-danger alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>No se puede crear el metter:</strong>
			<ul>
				<% @type_breeder.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
	</div>
	<div class="col-md-12">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="col-md-12">
		<br>
		<%= f.submit :class =>"btn btn-primary btn-block" %>
	</div>
	<% end %>
</div>
