<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Tipo de Criadores</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/type_breeders/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center">Nombre</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @type_breeders.each do |type_breeder| %>
    <tr >
      <td class="center"><%= type_breeder.name %></td>
      <td class="center"><%= link_to edit_admin_type_breeder_path(type_breeder) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_type_breeder_path(type_breeder), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @type_breeders, :locals => { :type_breeders => @type_breeders }, renderer: BootstrapPagination::Rails%>
<%= render :partial => "form"%>