<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Ejemplares</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/canines/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center">Nombre</th>
      <th class="center"><%= sort_link @search, :race_id, "race_id"%></th>
      <th class="center"><%= sort_link @search, :breeder_id, "breeder_id"%></th>
      <th class="center">Lof</th>
      <th class="center">Genero</th>
      <th class="center">Lof Padre</th>
      <th class="center">Lof Madre</th>
      <th class="center">Calificacion</th>
      <th class="center"><%= sort_link @search, :color_id, "color_id"%></th>
      <th class="center"><%= sort_link @search, :date, "Nacimiento"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @canines.each do |canine| %>
    <tr >
      <td class="center"><%= link_to canine.name, admin_canine_path(canine), :class => "link_to"  %></td>
      <td class="center"><%= canine.race %></td>
      <td class="center"><%= canine.breeder %></td>
      <td class="center"><%= canine.lof %></td>
      <td class="center"><%= gender(canine.gender) %></td>
      <td class="center"><%= canine.father_lof %></td>
      <td class="center"><%= canine.mother_lof %></td>
      <td class="center"><%= canine.rate %></td>
      <td class="center"><%= canine.color.name %></td>
      <td class="center"><%= canine.birth %></td>
      <td class="center"><%= link_to edit_admin_canine_path(canine) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_canine_path(canine), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @canines, :locals => { :canines => @canines }, renderer: BootstrapPagination::Rails%>


