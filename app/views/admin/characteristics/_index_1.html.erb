<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Colores</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/characteristics/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center">Nombre</th>
      <th class="center">Opciones</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @characteristics.each do |characteristic| %>
    <tr >
      <td class="center"><%= link_to characteristic.name,admin_characteristic_path(characteristic)  %></td>
      <%- if characteristic.measure_id.blank?%>
        <td class="center"><%= link_to "Agregar Opciones", admin_options_path(characteristic) %></td>
      <%else%>
        <td class="center"></td>
      <%end%>
      <td class="center"><%= link_to edit_admin_characteristic_path(characteristic) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_characteristic_path(characteristic), method: :delete, data: { confirm: 'Desea eliminar este characteristic?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
