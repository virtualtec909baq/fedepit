<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Razas</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/races/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @races.each do |race| %>
    <tr >
      <td class="center"><%= link_to race.name, admin_race_path(race.id)%></td>
      <td class="center"><%= link_to edit_admin_race_path(race.id) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_race_path(race.id), method: :delete, data: { confirm: 'Desea elimiar esta raza?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @races, :locals => { :races => @races }, renderer: BootstrapPagination::Rails%>

