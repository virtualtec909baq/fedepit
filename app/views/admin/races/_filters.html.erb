<div class="col-md-12">
	<div class="row">
	<%= search_form_for @search, url: admin_races_path do |f|%>	
		<div class="col-md-1">
			<label>Name</label>
		</div>	
		<div class="col-md-5">
			<%= f.search_field(:name_cont, class: 'form-control')%>
		</div>
		<div class="col-md-2">
			<%= f.submit :class =>"btn btn btn-primary btn-block"%>
		</div>
		<div class="col-md-2">
			<%= link_to "Borrar Filtro", request.path, class:"btn btn-danger btn_white btn-block"%>
		</div>
		<div class="col-md-2">
			<%= link_to "Agregar Raza", new_admin_race_path, class:"btn btn-primary btn_white btn-block"%>
		</div>
	<%end%>
	
	</div>
</div>	

