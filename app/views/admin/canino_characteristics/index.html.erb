<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Adicionar Metter A Ejemplares</h1>
    </div>
  </div>
  <div class="col-md-12">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th class="center">Nombre</th>
          <%unless params[:index_2]%>
            <th colspan="2"></th>
          <%end%>
        </tr>
      </thead>
      <tbody>
        <% @canines.each do |canine| %>
          <tr >
            <td class="center"><%= link_to canine.name, admin_canine_path(canine.id), :class => "link_to"  %></td>
            <%unless params[:index_2]%>
              <td class="center"><%= link_to "Crear Nuevo Metter", new_admin_canino_characteristic_path(canine_id: canine.id), :class => "link_to"  %></td>
              <td class="center"><%= link_to "Adicionar Metter", new_admin_canino_characteristic_path(canine_id: canine.id, edit: true), :class => "link_to"  %></td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-12">
    <%= will_paginate @canines, :locals => { :canines => @canines }, renderer: BootstrapPagination::Rails%>
  </div>
</div>


