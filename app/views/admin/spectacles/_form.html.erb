<!-- Modal -->
<div class="modal fade" id="myModalColor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Agregar Show</h4>
      </div>
      <div class="modal-body">
      <%= form_for @spectacle , url: admin_spectacles_path(@spectacle), :remote => true , method: :post do |f| %>
      <div id="erros"></div>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: 'form-control' , rows: 3%>
      </div>
      <div class="actions">
          <%= f.submit :class =>"btn btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>