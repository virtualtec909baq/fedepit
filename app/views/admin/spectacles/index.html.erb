<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Shows</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/spectacles/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @spectacles.each do |spectacle| %>
    <tr >
      <td class="center"><%= spectacle.name %></td>
      <td class="center"><%= link_to edit_admin_spectacle_path(spectacle) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_spectacle_path(spectacle), method: :delete, data: { confirm: 'Desea eliminar este show?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @spectacles, :locals => { :spectacles => @spectacles }, renderer: BootstrapPagination::Rails%>
