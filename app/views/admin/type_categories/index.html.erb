<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Categorias</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/type_categories/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :description, "Nombre"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @type_categories.each do |type_category| %>
    <tr >
      <td class="center"><%= type_category.description %></td>
      <td class="center"><%= link_to edit_admin_type_category_path(type_category) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_type_category_path(type_category), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @type_categories, :locals => { :type_categories => @type_categories }, renderer: BootstrapPagination::Rails%>
