<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1><%= @type_event.name%></h1>
    </div>
  </div>
</div>
<div class="modal-body">
	<%= form_for @type_category , url: admin_type_event_path(@type_category), :id => @type_category.id , method: :put do |f| %>
	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_field :description, class: 'form-control' %>
	</div>
	<div class="actions">
		<%= f.submit :class =>"btn btn-primary btn-block" %>
	</div>
	<% end %>
</div>
