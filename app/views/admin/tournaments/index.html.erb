<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Campeonatos</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/tournaments/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th class="center"><%= sort_link @search, :description, "DescripciÃ³n"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @tournaments.each do |tournament| %>
    <tr >
      <td class="center"><%= tournament.name %></td>
      <td class="center"><%= tournament.description %></td>
      <td class="center"><%= link_to edit_admin_tournament_path(tournament) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_tournament_path(tournament), method: :delete, data: { confirm: 'Desea eliminar este campeonato?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @tournaments, :locals => { :tournaments => @tournaments }, renderer: BootstrapPagination::Rails%>
