<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Eventos</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/type_events/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @type_events.each do |type_event| %>
    <tr >
      <td class="center"><%= type_event.name %></td>
      <td class="center"><%= link_to edit_admin_type_event_path(type_event) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_type_event_path(type_event), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @type_events, :locals => { :type_events => @type_events }, renderer: BootstrapPagination::Rails%>
