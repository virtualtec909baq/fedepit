<div class="row">
	<div class="col-lg-12">
	   <h2>Editar tipo de evento</h2>
	</div>
	<%= form_for @type_event , url: admin_type_event_path(@type_event), :id => @type_event.id , method: :put do |f| %>
	<div class="col-lg-12">
		<% if @type_event.errors.any? %>
	        <div class="alert alert-danger alert-dismissible" role="alert">
	          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	          <strong>No se puede modificar este tipo de evento:</strong>
	          <ul>
	            <% @type_event.errors.full_messages.each do |message| %>
	              <li><%= message %></li>
	            <% end %>
	          </ul>
	        </div>
	    <% end %>
	</div>
	<div class="col-lg-12">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="col-lg-12">
		<br>
		<%= f.submit :class =>"btn btn-primary btn-block" %>
	</div>
	<% end %>
</div>
