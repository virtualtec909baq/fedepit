<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1><%= @type_event.name%></h1>
    </div>
  </div>
</div>
<div class="modal-body">
	<%= form_for @type_event , url: admin_type_event_path(@type_event), :id => @type_event.id , method: :put do |f| %>
	<div class="field">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="field">
        <%= f.label :tipo_campeonato %><br>
        <%= f.check_box :championship %>
    </div>
	<div class="actions">
		<%= f.submit :class =>"btn btn-primary btn-block" %>
	</div>
	<% end %>
</div>
