<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Mis Publicidades</h1>
    </div>
    <div class="box-purchase">
      <%= render :partial => "admin/publicities/filters"%>
    </div>
  </div>
</div>
<hr>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="center"><%= sort_link @search, :name, "Nombre"%></th>
      <th class="center">Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @publicities.each do |publicity| %>
    <tr >
      <td class="center"><%= publicity.name %></td>
      <td class="center">
        <%if publicity.image.blank?%>
          <img src="http://placehold.it/50x50" class="sponsorimg img-responsive" alt=""/>
        <%else%>
          <img alt="" class=" sponsorimg img-responsive" src="<%= publicity.image%>">
        <%end%>
      </td>
      <td class="center"><%= link_to edit_admin_publicity_path(publicity) do %>
        <i class="fa fa-edit"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_publicity_path(publicity), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
      <td class="center"><%= link_to admin_change_status_publicities_path(publicity), method: :put, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-check"></i>
        <%end%>
      </td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @publicities, :locals => { :publicities => @publicities }, renderer: BootstrapPagination::Rails%>




