<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1><%= @publicity.name.upcase%></h1>
    </div>
  </div>
</div>
<div class="modal-body">
  <%= form_for @publicity , url: admin_publicity_path(@publicity), :id => @publicity.id , method: :put do |f| %>

  <div class="field">
    <%= f.label :Nombre %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :Imagen %><br>
    <%- if f.object && f.object.image && f.object.image%>
      <%= image_tag(f.object.image.to_s, :transformation => 'hint', alt: f.object.image.to_s)%>
      <%= f.file_field :image %>
      <%else%>
      <%= f.file_field :image %>
    <%end %>
  </div>

  <div class="actions">
    <%= f.submit :class =>"btn btn-primary btn-block" %>
  </div>
  <% end %>
</div>