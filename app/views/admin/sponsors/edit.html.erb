<div class="modal-body">
  <%= form_for @sponsor , url: admin_sponsor_path(@sponsor), :id => @sponsor.id , method: :put do |f| %>
  <div class="row">
  <div class="col-lg-12">
      <h2>Editar Patrocinado</h2>
  </div>
</div>
  <% if @sponsor.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>No se puede crear el metter:</strong>
      <ul>
        <% @sponsor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="field">
    <%= f.label :Nombre %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
          <%= f.label :Correo %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url , class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :Imagen %><br>
    <%- if f.object && f.object.image && f.object.image%>
      <%= image_tag(f.object.image.to_s, :transformation => 'hint', alt: f.object.image.to_s)%>
      <%= f.file_field :image %>
      <%else%>
      <%= f.file_field :image %>
    <%end %>
  </div>

  <div class="actions">
    <%= f.submit :class =>"btn btn-primary btn-block" %>
  </div>
  <% end %>
</div>