<div class="breadcrumb-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ol class="breadcrumb">
          <li>
            <a href="<%= root_path%>"><%= t('.home')%></a>
          </li>
          <li class="active"><%= t('.video')%></li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class='col-md-9'>
      <div class="blog-info-prod">
        <div class="pull-right">
          <h5><i class="fa fa-clock-o"></i> <%= @video.created_at.strftime('%b  %d  %Y')%></h5>
        </div>
        <div class="page-header">
          <h1><%= @video.title%></h1>
        </div>
        <a href="#">
          <%if @video.url.blank?%>
            <img src="http://placehold.it/1000x500" class="img-responsive" alt=""/>
          <%else%>
            <iframe width="810" height="415" src="https://www.youtube.com/embed/<%= @video.url%>" frameborder="0" allowfullscreen></iframe>
          <%end%>
        </a>
        <br>
        <p class="blog-desc-prod"><%= @video.description%></p>
      </div>
  </div>
</div>