<div class="blog-top-img">
  <div class="effect-over"></div>
  <div class="container">
    <div class="col-lg-12">
      <h1 class="about4-top-title">Texto descriptivo<span class="color-txt"> Texto descriptivo</span></h1>
      <h1 class="about4-top-title about4-top-second"><span class="color-txt">Texto descriptivo</span> </h1>
    </div>
  </div> 
</div>
<div class="breadcrumb-color"></div>
<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-4">
        <%if @canine.images.last.blank? %>
          <img alt="" class="img-responsive" src="http://placehold.it/350x350">
        <%else%>
          <img alt="" class="img-responsive" src="<%= @canine.images.last.file%>">
        <%end%>
      </div>
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-12">
            <h2><%= @canine.name%></h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <span>Sexo:</span>
            <span><%= gender(@canine.gender)%></span>
          </div>
          <br>
          <div class="col-md-12">
            <span>Criadero:</span>
            <%-if !@canine.breeder_id.blank?%>
              <span><%= @canine.breeder.name_breed%> </span>
            <%end%> 
          </div>
          <br>
          <div class="col-md-12">
            <span>Fecha Nacimiento:</span>
            <span><%= @canine.birth%></span>
          </div>
          <br>
          <div class="col-md-12">
            <span>Propietario:</span>
            <%-if !@canine.breeder_id.blank?%>
              <span><%= @canine.breeder.name%> </span>
            <%end%>
          </div>
          <br>
          <div class="col-md-12">
            <span>Color:</span>
             <%-if !@canine.color_id.blank?%>
              <span><%= @canine.color.name%> </span>
            <%end%>
          </div>
          <br>
          <div class="col-md-12">
            <span>Raza:</span>
            <%-if !@canine.race_id.blank?%>
              <span><%= @canine.race.name%> </span>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
   <div class="row marketing">
    <div class="col-lg-12">
        <!-- tabs -->
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#one" data-toggle="tab">Hijos</a></li>
            <li><a href="#two" data-toggle="tab">Hermanos</a></li>
            <li><a href="#twee" data-toggle="tab">Premios</a></li>
            <li><a href="#four" data-toggle="tab">Metter</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="one" style="padding: 10px;">
                <%= render partial: "/canines/children"%>
            </div>
            <div class="tab-pane" id="two" style="padding: 10px;">
              <%= render partial: "/canines/siblings"%>
            </div>
            <div class="tab-pane" id="twee"  style="padding: 10px;">
              <%= render partial: "/canines/awards"%>
            </div>
            <div class="tab-pane" id="four"  style="padding: 10px;">
              <%= render partial: "/canines/metter"%>
            </div>
           </div>
        </div>
        <!-- /tabs -->
    </div>
  </div>
</div>
